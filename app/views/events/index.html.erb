<p style="color: green"><%= notice %></p>

<!-- This displays all events to the user in a neat table format-->
<!-- For each displayed event you can show this event to see more details or add the new event to sign up for -->
<div class="container">
  <% if !user? %>
    <%= link_to "Create New Event", new_event_path %>
  <%end%>
  <h2>Events</h2>
  <div class="searchdiv">
  <table class="table table-striped">
      <thead>
        <tr>
          <th><%= "Event Name" %></th>
          <th><%= "Event Description" %></th>
          <th><%= "Start Date" %></th>
          <th><%= "End Date" %></th>
          <th><%= "Status" %></th>
          <th><%= "Points" %></th>
          <th><%= "More Details" %></th>
          <% if !user? %>
              <th><%= "Sign-Up" %></th>
          <%end%>             
          <th></th>       
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.start.strftime("%Y-%m-%d %I:%M %p") %></td>
            <td><%= event.end.strftime("%Y-%m-%d %I:%M %p") %></td>
            <td><%= event.status %></td>
            <td><%= event.points %></td>
            <td><%= link_to "Show this event", event %></td>
            <td><%= link_to "Add this event", new_user_event_path(eventId: event.id) %></td>
            <% if !user? %>
              <td><%= link_to "Check In", pages_event_sign_in_path(event_id: event.id) %></td>   
            <%end%>    
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
