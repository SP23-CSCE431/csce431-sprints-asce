<p style="color: green"><%= notice %></p>

<%= link_to "Back to my profile", profile_path %>

<h1>Users</h1>

  <%= form_tag "/users", method: "GET" do %>
    <%= label_tag :search_by_first_name %>
    <%= text_field_tag :search_by_first_name, params[:search_by_first_name] %>

    <%= label_tag :search_by_last_name %>
    <%= text_field_tag :search_last_name, params[:search_last_name] %>

<% end %>

<!-- This shows/displays all users in the club -->
<!-- Each user displayed has a link to individually see more details of that user -->
<div id="users">
  <% @users.each do |user| %>
      <%= render user %>
      <p>
        <%= link_to "Show this user", user %>
      </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
